    private void ConvertButtonActionPerformed(java.awt.event.ActionEvent evt) {                                              
       
           /*mg to g, mg to kg, g to mg, g to kg, kg to mg, kg to g*/
        double m= 1000;
        double n = 1000000;
        double mass1 = Double.parseDouble(TextField1.getText());

        if (ComboBox1.getSelectedItem().equals("mg to g")){
            //mg divide by 1000
            double mg2g = mass1/m;
            String value = String.format("%.2f", mg2g);
            TextField2.setText(value);     
        }
            
        else if (ComboBox1.getSelectedItem().equals("mg to kg")){
            double mg2kg = mass1/n;
            String value = String.format("%.6f", mg2kg);
            TextField2.setText(value); 
        }
        
        else if (ComboBox1.getSelectedItem().equals("g to mg")){
            double g2mg = mass1/m;
            String value = String.format("%.2f", g2mg);
            TextField2.setText(value); 
        }
        
         else if (ComboBox1.getSelectedItem().equals("g to kg")){
            double g2kg = mass1*m;
            String value = String.format("%.6f", g2kg);
            TextField2.setText(value); 
        }
          
        else if (ComboBox1.getSelectedItem().equals("kg to mg")){
            double kg2mg = mass1*n;
            String value = String.format("%.6f", kg2mg);
            TextField2.setText(value); 
        }
        
        else if (ComboBox1.getSelectedItem().equals("kg to g")){
            double kg2g = mass1*m;
            String value = String.format("%.6f", kg2g);
            TextField2.setText(value); 
        }
        
       
    
        
        
            
    
      

        
         
    }                                             

